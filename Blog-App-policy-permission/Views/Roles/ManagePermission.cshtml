@model RolePermissionViewModel


@{
    ViewData["Title"] = "Manage Roles";
}

<form asp-action="ManagePermissions" method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2>@Model.RoleName</h2>

        </div>
        <div class="card-body">
            <input type="hidden" asp-for="RoleId" />

            @for(int i=0;i<Model.Permissions.Count;i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Permissions[i].Value" />
                    <input asp-for="@Model.Permissions[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Permissions[i].IsSelected">
                        @Model.Permissions[i].Value
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>